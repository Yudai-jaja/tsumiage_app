<div class="container">
  <div class="row text-center justify-content-center">
  <h1 class="col-12 h3 mb-3 font-weight-normal">パスワード再設定</h1>
    <div class="signin col-md-6 col-md-offset-3">
      <%= form_for(:password_resets ,url: password_resets_path) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <%= f.email_field :email ,{ placeholder: "メールアドレス", class: "form-control mb-4" } %>
        <%= f.submit "再設定", class: "btn btn-purple-moon btn-rounded" %>
      <% end %>
    </div>
  </div>
</div>