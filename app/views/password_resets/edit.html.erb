<div class="container">
  <div class="row text-center justify-content-center">
  <h1 class="col-12 h3 mb-5 font-weight-normal">パスワードの再設定</h1>
    <div class="signin col-md-6 col-md-offset-3">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'layouts/error_messages' , model: f.object %>
        
        <%= hidden_field_tag :email, @user.email %>
      
        <%= f.password_field :password ,{ placeholder: "パスワード", class: "form-control mb-2" }%>
  
        <%= f.password_field :password_confirmation ,{ placeholder: "パスワード（確認）", class: "form-control mb-2" } %>
        <%= f.submit "登録", class: "btn btn-cool-blues btn-rounded my-4" %>
      <% end %>
    </div>
</div>