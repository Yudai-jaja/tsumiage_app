<% @post = Post.new unless @post %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
      <%= form_for(@post) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <%= f.submit '投稿画面を縮小', name: "form_reduction" ,class: "btn btn-sm btn-purple-moon btn-rounded text-right" %>

        <%= f.text_area :title ,{ placeholder: "タイトル(50文字以内で入力してください)", class: "form-control mb-2" } %>
  
        <%= f.text_area :content ,{ placeholder: "本文を入力してください。", class: "form-control mb-2", rows: "12" } %>
      
        <span class="picture"><%= f.file_field :picture %></span>
      </div>
        <div>
          <%= f.submit "登録", class: "btn btn-purple-moon btn-lg btn-rounded text-center" %>
        </div>
      <% end %>
  </div>
</div>