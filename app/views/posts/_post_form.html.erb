<div class="container">
  <div class="row text-center">
    <div class="col-12">
      <%= form_for(@post) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <%= f.text_field :title ,{ placeholder: "タイトル", class: "form-control mb-2" } %>
  
        <%= f.text_area :content ,{ placeholder: "本文", class: "form-control mb-2" } %>
        <%= f.submit "登録", class: "btn btn-primary btn-lg btn-block" %>
        <span class="picture">
          <%= f.file_field :picture %>
        </span>
      <% end %>
  </div>
</div>