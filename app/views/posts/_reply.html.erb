<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 pb-3">
        <%= form_for(@new_reply, url: reply_post_path ) do |f| %>
          <div class="row">
            <div class="col-10">
              <%= render 'layouts/error_messages', model: f.object %>
              
              <%= f.text_area :content ,{ placeholder: "本文", class: "form-control mb-2 content", rows: "2" } %>
              
              <span class="text-center"><%= f.file_field :picture , id: "picture" %></span>
            </div>
            <div class="col-2">
              <%= f.submit "投稿", class: "btn btn-green-moon btn-rounded btn-sm mt-3 post_request" %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>