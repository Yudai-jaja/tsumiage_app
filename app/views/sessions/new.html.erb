<div class="container">
  <div class="row text-center justify-content-center">
  <h1 class="col-12 h3 mb-3 font-weight-normal">ログイン</h1>
    <div class="signin col-md-6 col-md-offset-3">
      <%= form_for :session, url: login_path do |f| %>
        <%= f.email_field :email ,{ placeholder: "メールアドレス", class: "form-control mb-2" } %>
  
        <%= f.password_field :password ,{ placeholder: "パスワード", class: "form-control mb-2" }%>
  
        <%= f.check_box :remember_me , class: "checkbox mb-3" %>
        <%= f.label :remember_me, "ログイン状態を保存する"%>
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
  </div>
</div>
