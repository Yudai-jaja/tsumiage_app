<% user ||= @user %>
  <% if current_user? user %>
    <%= render 'posts/time_form' %>
    <%= link_to edit_user_path(@user), { class: "nav-link p-2 mr-4 text-dark" } do %>
    <i class="fas fa-edit fa-sm"></i>
    <% end %>
  <% end %>
  
  <h4>
    <%= image_tag user.image_name.thumb.url , class: "img-thumbnail rounded-circle d-block mx-auto" ,id: "profile-image"%>
    <div class="mt-3"><%= user.name %></div>
  </h4>
  
  <div>
    <% if @user.posts.any? %>
    <h6 id="post_count"></h6>投稿数(<%= @user.posts.count %>)</h6>
    <% end %>
  </div>
  
  <div style="white-space:pre-wrap" class="my-3">
    <%= user.profile%>
  </div>
  
  <%= render 'layouts/status' %>
  <section class="mb-3">
    <%= render 'users/follow_form' if logged_in? %>
  </section>
