<div class="container">
  <div class="row text-center justify-content-center">
  <h1 class="col-12 h3 mb-3 font-weight-normal">ユーザーの新規作成</h1>
    <div class="signin col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <%= f.text_field :name ,{ placeholder: "ユーザー名", class: "form-control mb-2" } %>
  
        <%= f.email_field :email ,{ placeholder: "メールアドレス", class: "form-control mb-2" } %>
  
        <%= f.password_field :password ,{ placeholder: "パスワード", class: "form-control mb-2" }%>
  
        <%= f.password_field :password_confirmation ,{ placeholder: "パスワード（確認）", class: "form-control mb-2" } %>
        <%= f.submit "登録", class: "btn btn-purple-moon btn-lg btn-rounded" %>
      <% end %>
    <div class="row">
      <div class="col-6">
        <div class="card my-5">
          <div class="card-body">
            <p class="card-text">ユーザーを作成済みで、メールアドレスの確認がまだの方</p>
              <%= link_to resend_email_new_path, class: "btn btn-sm btn-green-moon btn-rounded" do %>
            <i class="fa fa-envelope fa-sm" aria-hidden="true">確認メールの再送</i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="card my-5">
          <div class="card-body">
            <p class="card-text">ログインの方はこちら</p>
              <%= link_to login_path , { class: "btn btn-sm btn-green-moon btn-rounded" } do %>
                <i class="fa fa-key fa-sm" aria-hidden="true">ログイン</i>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>